doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="css/styles.css")
    body
        header
            .header-menu.flex.wrapper
                .logo
                    picture
                        img(src="/img/logo.png", alt="")
                .menu.flex
                    a(href="#") Галерея
                    a(href="#") Про нас
                    a(href="#").btn замовити дзвінок    
        main.flex
            .canvas.flex
                picture.molbert
                    img(src="/img/molbert.png", alt="")
            .menu-to-canvas.wrapper
                .menu-canvas
                    h2 Виберіть розмір
                    form(action="") 
                        .sizes.flex
                            p.first
                                input(type="radio" name="size" id="30x30")
                                label(for="30x30")
                            p.second
                                input(type="radio" name="size" id="30x90")
                                label(for="30x90")
                            p.thirst 
                                input(type="radio" name="size" id="90x120")
                                label(for="30x120")
                            p.fourth
                                input(type="radio" name="size" id="90x150")
                                label(for="30x150")
                            p.btn
                                button(type="submit").btn-blue задати розмір
                    form(action="")
                        .personal-size.flex
                            .x-input
                                p ширина
                                input(type="text" id="x-input")
                            .multiplication
                                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368"><path d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z"/></svg>
                            .y-input
                                p висота
                                input(type="text" id="y-input")
                            p.btn
                                button(type="submit").btn-blue підрахувати
                    hr
                    .additional-service 
                        h2 Додаткові опції
                        .additional-service-menu.flex
                            .expensive-kanvas.flex.space-between
                                p
                                    input(type="checkbox" name="additional" id="expensive-kanvas")
                                    label(for="expensive-kanvas") дорожче полотно
                                p + 35 грн
                            .with-frame.flex.space-between
                                p
                                    input(type="checkbox" name="additional" id="with-frame")
                                    label(for="with-frame") з рамкою
                                p + 10 грн
                            .delivery.flex.space-between
                                p
                                    input(type="checkbox" name="additional" id="delivery")
                                    label(for="delivery") з доставкою (Нова Пошта)
                                p + 40 грн
                    hr
                    form(action="").total-sum
                        button(type="submit") придбати
        footer.wrapper
            .copyright